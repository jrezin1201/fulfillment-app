// Prisma schema for Kit Manufacturing & Fulfillment App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  image              String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  accounts           Account[]
  sessions           Session[]
  projects           Project[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==========================================
// MANUFACTURING & FULFILLMENT MODELS
// ==========================================

// Kit Types (e.g., Bulk Fit, DTC A1c, etc.)
model Kit {
  id                    String         @id @default(cuid())
  name                  String         @unique // "Bulk Fit", "DTC A1c", etc.
  description           String?        @db.Text
  distributionModel     String         // "bulk" or "dtc"
  fulfillmentModel      String         // "b2b" or "b2c"
  isActive              Boolean        @default(true)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  bomLineItems          BomLineItem[]
  projectKits           ProjectKit[]

  @@index([name])
}

// Component Library (individual parts that go into kits)
model Component {
  id                    String         @id @default(cuid())
  name                  String
  sku                   String?        @unique
  description           String?        @db.Text
  category              String?        // "Tubes", "Labels", "Packaging", etc.

  // Sourcing information
  defaultSourcingType   String         // "dot_sourced", "dot_manufactured", "customer_provided"
  defaultVendor         String?

  // Pricing
  unitCost              Float          @default(0)
  currency              String         @default("USD")

  // Inventory
  moq                   Int?           // Minimum Order Quantity
  leadTimeDays          Int?
  isAtRisk              Boolean        @default(false)
  riskNotes             String?        @db.Text

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  bomLineItems          BomLineItem[]

  @@index([name])
  @@index([sku])
}

// BOM Line Item (links Component to Kit with quantities and overrides)
model BomLineItem {
  id                    String         @id @default(cuid())

  kitId                 String
  componentId           String

  // Quantities
  unitsPerKit           Float          // How many of this component per kit
  bufferPercent         Float          @default(2.0) // Scrap/overbuild %

  // Sourcing (can override component defaults)
  sourcingType          String         // "dot_sourced", "dot_manufactured", "customer_provided"
  vendor                String?

  // Customer-provided specific fields
  requiresReceiving     Boolean        @default(false)
  requiresQa            Boolean        @default(false)
  dependencyNotes       String?        @db.Text

  // Pricing overrides
  unitCostOverride      Float?
  handlingSurcharge     Float          @default(0)

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  kit                   Kit            @relation(fields: [kitId], references: [id], onDelete: Cascade)
  component             Component      @relation(fields: [componentId], references: [id], onDelete: Cascade)

  @@unique([kitId, componentId])
  @@index([kitId])
  @@index([componentId])
}

// Project / Quote / SOW
model Project {
  id                    String         @id @default(cuid())
  userId                String

  // Project details
  projectName           String
  customerName          String?
  status                String         @default("draft") // "draft", "quoted", "approved", "in_production", "completed"

  // Fulfillment
  targetShipDate        DateTime?
  fulfillmentModel      String         // "b2b_bulk" or "b2c_api"

  // Pricing summary (calculated)
  totalManufactureCost  Float          @default(0)
  totalAssemblyCost     Float          @default(0)
  totalProjectCost      Float          @default(0)

  // SOW generation
  sowGeneratedAt        DateTime?
  sowPdfUrl             String?

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  user                  User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectKits           ProjectKit[]

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

// Links Project to Kit with quantity
model ProjectKit {
  id                    String         @id @default(cuid())

  projectId             String
  kitId                 String

  quantity              Int            // How many of this kit to build

  // Calculated costs (stored for historical accuracy)
  manufactureCost       Float          @default(0)
  assemblyCost          Float          @default(0)
  extendedTotal         Float          @default(0)

  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  project               Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  kit                   Kit            @relation(fields: [kitId], references: [id], onDelete: Cascade)

  @@unique([projectId, kitId])
  @@index([projectId])
  @@index([kitId])
}
